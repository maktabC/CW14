@using CW14.Models;
@model List<Book>
@{
    ViewData["Title"] = "Book Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
   <a asp-action="Add" asp-controller="Home" class="btn btn-outline-success">Add Book</a>
   <br />
   <br />
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Writer</th>
            <th scope="col">Owner Name</th>
            <th scope="col">Register Date</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var book in Model)
        {
        <tr>
            <th scope="row">@book.Id</th>
            <td>@book.Title</td>
            <td>@book.Writer</td>
            <td>@book.OwenrName</td>
            <td>@book.AddDate</td>
            <td>
                    <a asp-action="Update" asp-controller="Home" class="btn btn-outline-warning">Edit</a>
                    <br />
                    <form asp-action ="Delete" asp-controller="Home" asp-route-id="@book.Id" method="post">
                        <input type="submit" class="btn btn-outline-danger" value="Delete">
                    </form>
            </td>
        </tr>
        }
</table>